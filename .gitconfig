[core]
	trustctime = false
	editor = vim
	filemode = false
	eol = lf
	autocrlf = false

[credential]
	helper = cache --timeout=3600

[push]
	default = simple

[merge]
	tool = meld
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
[mergetool "meld"]
	path = /C/tools/Meld/Meld.exe
  
[color]
	ui = true

[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status -sb
	br = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all

